datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  email         String    @unique
  passwordHash  String
  userAuthToken String    @unique

}

model Role {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String @unique
}
